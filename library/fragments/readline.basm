; Ths reads a string from the keyboard
; r0 pointer to the buffer beginning (es: mov r0, ram:buff)
; r2: pointer to the start of the memory where the string will be stored, it will be updated and it will point to the end
%fragment readline
	rsets8	r3, 13
getchar:
	i2rw	r1, i0
	cmpr	r1, r3
	jcmp	end
        mov     vtm0:[r2], r1
	mov	ram:[r0], r1
        inc     r0
        inc     r2
        j getchar
end:
	mov	r1, 0
	mov	ram:[r0], r1
%endfragment

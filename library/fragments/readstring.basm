; Ths reads a string from the keyboard
; r0 pointer to the buffer beginning (es: mov r0, ram:buff)
; r2 lenght
%fragment readstring
        rsets8	r2, 0
	rsets8	r3, 13
getchar:
	i2rw	r1, i0
	cmpr	r1, r3
	jcmp	end
        mov     vtm0:[r2], r1
	mov	ram:[r0], r1
        inc     r0
        inc     r2
        j getchar
end:
	mov	r0,r2
        rsets8	r3,0
loop:
	mov	vtm0:[r0], r3
	jz	r0, end2
	dec	r0
	j loop
end2:
	nop
%endfragment
